<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/calcPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize = "30sp"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/euler"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="e"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/allClear"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="AC"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/clear"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="C"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/divide"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="/"
                android:layout_margin="5dp"/>
        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/seven"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="7"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/eight"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="8"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/nine"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="9"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/multiply"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="*"
                android:layout_margin="5dp"/>
        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/four"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="4"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/five"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="5"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/six"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="6"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/plus"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="+"
                android:layout_margin="5dp"/>
        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/one"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="1"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/two"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="2"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/three"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="3"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/minus"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="-"
                android:layout_margin="5dp"/>
        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/valami"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="valami"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/zero"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="0"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/point"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="."
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/equal"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="="
                android:layout_margin="5dp"/>
        </TableRow>

    </TableLayout>
</LinearLayout>
